#include <stdio.h>

int main() {
    float numero;
    float *ponteiro;

    // Solicita o valor real para o usuário
    printf("Digite um valor real: ");
    scanf("%f", &numero);

    // Define que o ponteiro aponta para o endereço de memória da variável 'numero'
    ponteiro = &numero;

    // Calcula o dobro do valor através do ponteiro
    float dobro = *ponteiro * 2;

    // Imprime na tela o valor original e o dobro calculado
    printf("O valor original eh: %.2f\n", *ponteiro);
    printf("O dobro do valor eh: %.2f\n", dobro);

    return 0;
}
