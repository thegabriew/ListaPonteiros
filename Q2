#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

#define TAM_MAX 100

int main() {
	
	//declarando a string 
    char str_original[TAM_MAX];
    
    //declarando o ponteiro da string 
    char *p_str_original = str_original;
    
    
    //declarando o tamanho da string 
    int tam_str_original;
    int i;

    printf("Digite uma string: ");
    fgets(str_original, TAM_MAX, stdin);

	//usando a função "sterlen" para saber o tamanho da string
    tam_str_original = strlen(str_original);

	//loop para separar as vogais
    for (i = 0; i < tam_str_original; i++) {
        if (p_str_original[i]=='a' || p_str_original[i]=='e' || p_str_original[i]=='i' || p_str_original[i]=='o'|| p_str_original[i]=='u'){
            
        } else {
        	
        	printf("%c",*(p_str_original+i));
		}
    }
    

    return 0;
}
