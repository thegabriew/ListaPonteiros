#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {

       //declarando vari√°veis 
	char txt[100];
	char *ptr = txt;
	int size;
        int copy;
        char textcopy [size];
	
        //recebendo string
	printf("Insira uma frase: ");
	gets(txt);
	
	size = strlen(txt);
	
        //analisando a frase
        for (int i=0; i<size; i++) {
	if (ptr[i] == 'a' || ptr[i] == 'e' || ptr[i] == 'i' || ptr[i] == 'o' || ptr[i] == 'u' || ptr[i] == 'A' || ptr[i] == 'E' || ptr[i] == 'I' || ptr[i] == 'O' || ptr[i] == 'U') {}
	else {
		textcopy[copy] = ptr[i];
		copy++;
		}
	}

	for (int i = 0;i < copy;i++) {
       printf("%c",textcopy[i]);

}
	
	return 0;
}
